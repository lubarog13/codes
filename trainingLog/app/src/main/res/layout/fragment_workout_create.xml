<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingBottom="90dp"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Создать тренировки"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/create_title"
        android:textColor="@android:color/black"
        android:textSize="24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorDivider"
        android:layout_marginBottom="10dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Группа:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_height="match_parent"
            android:id="@+id/club_group"
            android:layout_column="1"
            android:layout_row="0"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Тренер:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="20dp"
            android:id="@+id/club_coach"
            android:layout_column="1"
            android:layout_row="1"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Зал:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="2"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/workout_hall"
            android:layout_column="1"
            android:layout_row="2"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Вид:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="3"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/workout_type"
            android:layout_column="1"
            android:layout_row="3"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"/>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <RadioButton
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:text="Одна тренировка"
                android:layout_columnWeight="1"
                android:checked="true"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:textSize="12sp"
                android:id="@+id/workout_1"
                android:layout_marginStart="20dp"
                android:buttonTint="@android:color/black"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/one_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/one_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text=' '
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/one_year"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingEnd="20dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Периодичность"
            android:layout_columnWeight="1"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"
            android:id="@+id/workout_many"
            android:layout_marginStart="20dp"
            android:buttonTint="@android:color/black"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="7"
            android:rowCount="2">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="пн."
                android:layout_columnWeight="1"
                android:textColor="@android:color/black"
                android:gravity="center"
                android:fontFamily="@font/roboto_bold"
                android:layout_row="0"
                android:layout_column="0"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="вт."
                android:layout_columnWeight="1"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_row="0"
                android:gravity="center"
                android:layout_column="1"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="ср."
                android:gravity="center"
                android:layout_columnWeight="1"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_row="0"
                android:layout_column="2"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="чт."
                android:layout_columnWeight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_row="0"
                android:layout_column="3"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="пт."
                android:layout_columnWeight="1"
                android:gravity="center"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:layout_row="0"
                android:layout_column="4"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="сб."
                android:layout_columnWeight="1"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="5"
                android:textSize="12sp"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="вс."
                android:layout_columnWeight="1"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:layout_row="0"
                android:layout_column="6"
                android:textSize="12sp"/>
            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:layout_row="1"
                android:layout_column="0"
                android:buttonTint="@android:color/black"
                android:id="@+id/pn_button"/>
            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="1"
                android:buttonTint="@android:color/black"
                android:id="@+id/vt_button"/>
            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="2"
                android:buttonTint="@android:color/black"
                android:id="@+id/sr_button"/>
            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="3"
                android:buttonTint="@android:color/black"
                android:id="@+id/ch_button"/>
            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="4"
                android:buttonTint="@android:color/black"
                android:id="@+id/pt_button"/>
            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="5"
                android:buttonTint="@android:color/black"
                android:id="@+id/sb_button"/>
            <CheckBox
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_columnWeight="1"
                android:gravity="center"
                android:layout_row="1"
                android:layout_column="6"
                android:buttonTint="@android:color/black"
                android:id="@+id/vs_button"/>
        </GridLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/start_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text=' '
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/start_year"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='-'
            android:textColor="@android:color/black"
            android:layout_margin="10dp"
            android:textSize="18sp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/end_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/end_month"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="text"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text=' '
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/end_year"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="18sp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">
        <TextView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:text="Время:"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:id="@+id/start_hour"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text=':'
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <EditText
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginEnd="30dp"
            android:id="@+id/start_minutes"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp"
            android:id="@+id/end_hour"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text=':'
            android:layout_gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp" />
        <EditText
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:layout_marginEnd="30dp"
            android:id="@+id/end_minutes"
            android:textSize="16sp"/>
    </LinearLayout>
    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_marginTop="20dp"
        app:indicatorColor="@color/colorPrimaryDark"
        android:id="@+id/linear_progress"
        android:paddingHorizontal="40dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="170dp"
            android:layout_height="31dp"
            android:background="@drawable/blue_button_2"
            android:textAllCaps="false"
            android:text="Создать"
            android:id="@+id/save_button"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="31dp"
            android:background="@drawable/button_red"
            android:textAllCaps="false"
            android:text="Очистить"
            android:layout_marginStart="30dp"
            android:id="@+id/cleanButton"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"/>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/is_not_attend_layout"
        android:id="@+id/error_view"
        android:visibility="gone"/>
</LinearLayout>