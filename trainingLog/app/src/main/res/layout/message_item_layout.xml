<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_marginBottom="30dp"
    android:layout_height="wrap_content"
    android:background="@drawable/profile_alpha_rect">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:background="@drawable/profile_alpha_rect">
        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:id="@+id/message_type"
            android:text="от:"
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/black"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="154dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="Самсонова Н.В."
            android:textColor="#3F51B5"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:id="@+id/sender_name"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="07.09.21 16:00"
            android:gravity="center"
            android:textColor="#686868"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/send_date"
            android:textSize="16sp"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4">
        <TextView
            android:layout_width="130dp"
            android:text="заголовок:"
            android:gravity="center"
            android:layout_row="0"
            android:layout_column="0"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="140dp"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:text="Привет, напиши причину отсутствия"
            android:textAlignment="textEnd"
            android:textColor="#686868"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:gravity="end"
            android:id="@+id/message_title"
            android:paddingEnd="20dp"/>
        <TextView
            android:layout_width="100dp"
            android:text="текст:"
            android:gravity="center"
            android:layout_row="1"
            android:layout_column="0"
            android:textColor="@android:color/black"
            android:id="@+id/text_in_message"
            android:fontFamily="@font/roboto_bold"
            android:visibility="gone"
            android:layout_height="wrap_content"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_columnSpan="2"
            android:layout_columnWeight="2"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:text="отсутствует"
            android:layout_column="0"
            android:paddingVertical="10dp"
            android:paddingHorizontal="30dp"
            android:textColor="#686868"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:visibility="gone"
            android:id="@+id/message_text"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_columnSpan="2"
            android:layout_marginBottom="10dp"
            android:layout_columnWeight="2"
            android:layout_row="3"
            android:layout_marginTop="20dp"
            android:layout_column="0"
            android:layout_height="40dp">
            <Button
                android:layout_width="198dp"
                android:layout_height="31dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/outlined_button"
                android:layout_marginStart="30dp"
                android:textAllCaps="false"
                android:text="Показать текст сообщения"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/show_text_button"
                android:textSize="12sp"/>
            <Button
                android:layout_width="99dp"
                android:layout_height="31dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/outlined_button"
                android:layout_marginStart="30dp"
                android:textAllCaps="false"
                android:text="Ответить"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:id="@+id/resend_message_button"
                android:textSize="12sp"/>
        </LinearLayout>

    </GridLayout>
</LinearLayout>