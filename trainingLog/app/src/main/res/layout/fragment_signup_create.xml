<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:text="Добавить запись"
        android:layout_gravity="center"
        android:gravity="center"
        android:id="@+id/create_title"
        android:textColor="@android:color/black"
        android:textSize="24dp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@color/colorDivider"
        android:layout_marginBottom="10dp"/>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:rowCount="4"
        >
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Группа:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="0"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <com.jaredrummler.materialspinner.MaterialSpinner
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="20dp"
            android:id="@+id/group"
            android:layout_column="1"
            android:layout_row="0"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Имя пользователя:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="1"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="0dp"
            android:layout_columnWeight="1"
            android:layout_marginEnd="20dp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/username"
            android:layout_column="1"
            android:layout_row="1"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="16sp"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Дата начала записи:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="2"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="center">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/start_day"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text='""'
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <com.jaredrummler.materialspinner.MaterialSpinner
            android:id="@+id/start_month"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/black"
            android:maxHeight="100dp"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:text=' '
            android:textColor="@android:color/black"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/start_year"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:backgroundTint="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="@android:color/black"
            android:textColorHint="@android:color/black"
            android:textSize="16sp" />
        </LinearLayout>
        <TextView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:text="Дата окончания записи:"
            android:fontFamily="@font/roboto_bold"
            android:layout_column="0"
            android:layout_row="3"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="14sp"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:layout_row="3"
            android:orientation="horizontal"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text='""'
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/end_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:inputType="number"
                android:maxLength="2"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text='""'
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <com.jaredrummler.materialspinner.MaterialSpinner
                android:id="@+id/end_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:inputType="text"
                android:textColor="@android:color/black"
                android:maxHeight="100dp"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_bold"
                android:text=' '
                android:textColor="@android:color/black"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/end_year"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:backgroundTint="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:inputType="number"
                android:maxLength="4"
                android:textColor="@android:color/black"
                android:textColorHint="@android:color/black"
                android:textSize="16sp" />
        </LinearLayout>
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:gravity="center"
        android:orientation="horizontal">
        <Button
            android:layout_width="170dp"
            android:layout_height="31dp"
            android:background="@drawable/blue_button_2"
            android:textAllCaps="false"
            android:text="Создать"
            android:id="@+id/save_button"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"/>
        <Button
            android:layout_width="170dp"
            android:layout_height="31dp"
            android:background="@drawable/button_red"
            android:textAllCaps="false"
            android:text="Очистить"
            android:layout_marginStart="30dp"
            android:id="@+id/cleanButton"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"/>
    </LinearLayout>
    <include
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/is_not_attend_layout"
        android:id="@+id/error_view"
        android:visibility="gone"/>
</LinearLayout>