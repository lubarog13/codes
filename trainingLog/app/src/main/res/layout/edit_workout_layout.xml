<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/edit_workout_view"
    android:layout_height="wrap_content">
<GridLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:rowCount="5"
    android:paddingBottom="10dp"
    android:columnCount="2">
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Группа:"
        android:fontFamily="@font/roboto_bold"
        android:layout_column="0"
        android:layout_row="0"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="16sp"/>
    <Spinner
        android:layout_width="222dp"
        android:layout_height="match_parent"
        android:layout_row="0"
        android:id="@+id/groups_spinner"
        style="@style/SpinnerTheme"
        android:layout_gravity="center"
        android:background="@drawable/triangle"
        android:spinnerMode="dropdown"
        android:layout_column="1"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Тренер:"
        android:fontFamily="@font/roboto_bold"
        android:layout_column="0"
        android:layout_row="1"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="16sp"/>
    <Spinner
        android:layout_width="222dp"
        android:layout_height="match_parent"
        android:layout_row="1"
        android:id="@+id/coach_spinner"
        style="@style/SpinnerTheme"
        android:layout_gravity="center"
        android:background="@drawable/triangle"
        android:spinnerMode="dropdown"
        android:layout_column="1"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Зал:"
        android:fontFamily="@font/roboto_bold"
        android:layout_column="0"
        android:layout_row="2"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="16sp"/>
    <Spinner
        android:layout_width="222dp"
        android:layout_height="match_parent"
        android:layout_row="2"
        android:id="@+id/hall_spinner"
        style="@style/SpinnerTheme"
        android:layout_gravity="center"
        android:background="@drawable/triangle"
        android:spinnerMode="dropdown"
        android:layout_column="1"/>
    <TextView
        android:layout_width="150dp"
        android:layout_height="40dp"
        android:text="Вид:"
        android:fontFamily="@font/roboto_bold"
        android:layout_column="0"
        android:layout_row="3"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="16sp"/>
    <Spinner
        android:layout_width="222dp"
        android:layout_height="match_parent"
        android:layout_row="3"
        android:id="@+id/type_spinner"
        style="@style/SpinnerTheme"
        android:layout_gravity="center"
        android:background="@drawable/triangle"
        android:spinnerMode="dropdown"
        android:layout_column="1"/>
    <EditText
        android:layout_width="222dp"
        android:visibility="gone"
        android:layout_marginHorizontal="20dp"
        android:layout_height="50dp"
        android:inputType="textMultiLine"
        android:hint="Напишите вид сюда"
        android:layout_gravity="center"
        android:textSize="14sp"
        android:padding="10dp"
        android:id="@+id/type_text"
        android:background="@drawable/textarea"
        android:layout_row="4"
        android:layout_column="1"
        android:fontFamily="@font/roboto_bold"
        android:scrollbars="vertical"
        android:gravity="top"/>
</GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:id="@+id/time_layout"
        android:orientation="horizontal">
        <TextView
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="Время\n начала:"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@android:color/black"
        android:gravity="center"
        android:textSize="16sp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/start_time"/>
        <TextView
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="Время\n окончания:"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/black"
            android:gravity="center"
            android:textSize="16sp"/>
        <EditText
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:fontFamily="@font/roboto_bold"
            android:id="@+id/end_time"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="5dp"
        android:padding="10dp"
        >
        <Button
            android:layout_width="113dp"
            android:layout_height="30dp"
            android:background="@drawable/button_blue"
            android:textAllCaps="false"
            android:text="Сохранить"
            android:id="@+id/save_button"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"/>
        <Button
            android:layout_width="113dp"
            android:layout_height="30dp"
            android:background="@drawable/button_red_dark"
            android:textAllCaps="false"
            android:layout_marginStart="50dp"
            android:text="Сбросить"
            android:id="@+id/reset_button"
            android:textColor="@android:color/white"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"/>
    </LinearLayout>
</LinearLayout>