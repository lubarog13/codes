<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="90dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:gravity="bottom"
            android:layout_gravity="bottom"
            android:layout_height="142dp">

            <ImageView
                android:id="@+id/messages_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@mipmap/ic_lmain_back" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Сообщения"
                android:fontFamily="@font/stalinist_one"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:paddingEnd="20dp"/>
        </RelativeLayout>
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
            android:rowCount="1"
            android:background="@color/colorDivider"
            android:layout_height="41dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/enter_messages"
                android:layout_gravity="center_vertical"
                android:text="Входящие"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:drawablePadding="-30dp"
                android:drawableStart="@drawable/ic_groupmessage"
                android:layout_height="39dp"/>
            <Button
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_columnWeight="1"
                android:id="@+id/out_messages"
                android:background="@color/colorDivider"
                android:drawableStart="@drawable/ic_carbon_mail_all"
                android:layout_height="39dp"
                android:textSize="18sp"
                android:drawablePadding="-30dp"
                android:textAllCaps="false"
                android:text="Исходящие"
                />
        </GridLayout>
        <FrameLayout
            android:id="@+id/child_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</androidx.core.widget.NestedScrollView>