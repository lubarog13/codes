<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:paddingTop="5dp"
    android:background="@color/colorPrimaryDark"
    android:layout_height="match_parent"
    android:fillViewport="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:background="@color/colorPrimaryDark"/>
        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text= "Секции"
            android:fontFamily="@font/stalinist_one"
            android:textSize="24sp"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            />
        <GridLayout
            android:layout_width="match_parent"
            android:columnCount="2"
            android:rowCount="1"
            android:background="@color/colorDivider"
            android:layout_height="41dp">
            <Button
                android:layout_width="wrap_content"
                android:layout_columnWeight="1"
                android:id="@+id/my_all"
                android:layout_gravity="center_vertical"
                android:text="Мои секции"
                android:textAllCaps="false"
                android:background="@android:color/white"
                android:textSize="18sp"
                android:paddingStart="10dp"
                android:drawablePadding="-30dp"
                android:drawableStart="@drawable/ic_icon_park_done_all"
                android:layout_height="39dp"/>
            <Button
                android:layout_width="wrap_content"
                android:paddingStart="10dp"
                android:layout_gravity="center_vertical"
                android:layout_columnWeight="1"
                android:id="@+id/all_all"
                android:background="@color/colorDivider"
                android:drawableStart="@drawable/ic_mdi_expand_all"
                android:layout_height="39dp"
                android:textSize="18sp"
                android:drawablePadding="-30dp"
                android:textAllCaps="false"
                android:text="Все секции"
                />
        </GridLayout>
        <include
            layout="@layout/error_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:paddingTop="30dp"
            android:paddingBottom="20dp"
            android:layout_marginRight="3dp">

            <Spinner
                android:id="@+id/club_category_spinner"
                style="@style/SpinnerTheme"
                android:layout_width="222dp"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="@drawable/triangle"
                android:spinnerMode="dropdown" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:id="@+id/coach_info"
            android:visibility="gone"
            android:gravity="center"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:paddingEnd="30dp"
                android:textColor="@android:color/black"
                android:id="@+id/coach_selected_name"/>
            <Button
                android:layout_width="136dp"
                android:layout_height="31dp"
                android:text="Написать"
                android:textColor="@android:color/white"
                android:textAllCaps="false"
                android:background="@color/colorGreen"
                android:id="@+id/message_coach_create"
                android:fontFamily="@font/roboto_bold"
                android:textSize="12sp"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:paddingBottom="50dp"
            android:id="@+id/clubs_recycler"
            android:layout_height="wrap_content" />
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp"
            android:id="@+id/coaches_category"
            android:layout_gravity="center_horizontal"
            android:visibility="gone"/>
    </LinearLayout>
</androidx.core.widget.NestedScrollView>