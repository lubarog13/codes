<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_gravity="center"
    style="@style/AppTheme"
    android:gravity="center"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_error_background"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Войдите"
        android:fontFamily="@font/stalinist_one"
        android:textColor="@android:color/white"
        android:textSize="36dp"
        />

        <TextView
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/marck_script"
            android:text="в систему"
            android:textAlignment="textEnd"
            android:textColor="@android:color/white"
            android:textSize="40sp" />

        <ImageView
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:alpha="0.6"
            android:src="@drawable/rect" />
    </LinearLayout>
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:paddingTop="30dp"
    android:backgroundTintMode="src_over"
    android:orientation="vertical"
    tools:context=".ui.auth.MainActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:id="@+id/login_enter"
        android:layout_marginTop="30dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:hint="Логин"
        />
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@android:color/white"
        android:backgroundTint="@android:color/white"
        android:textColorHint="@android:color/white"
        android:inputType="textPassword"
        android:hint="Пароль"
        android:id="@+id/password_enter"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/colorRed"
        android:fontFamily="@font/roboto_mono_medium"
        android:id="@+id/error_text"
        android:textSize="14sp"/>
    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:columnCount="2"
        android:layout_marginTop="20dp"
        android:rowCount="3">
        <Button
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="Вход"
            android:layout_column="0"
            android:layout_rowSpan="2"
            android:layout_marginTop="10dp"
            android:id="@+id/login"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"
            android:layout_row="0"
            >
        </Button>

        <TextView
            android:id="@+id/incognito"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="center"
            android:text="@string/anonimus"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary" />
        <TextView
            android:layout_column="1"
            android:layout_row="0"
            android:layout_marginLeft="20dp"
            android:text="@string/setpassword"
            android:layout_width="100dp"
            android:layout_gravity="center"
            android:textColor="@android:color/white"
            android:id="@+id/set_pass"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_column="1"
            android:layout_row="1"
            android:paddingTop="10dp"
            android:text="@string/reg"
            android:layout_width="100dp"
            android:layout_marginLeft="20dp"
            android:textAlignment="center"
            android:layout_gravity="center"
            android:textColor="@color/colorPrimary"
            android:id="@+id/reg"
            android:textSize="16dp"
            android:layout_height="wrap_content"
            />
    </GridLayout>

</LinearLayout>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="500dp"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_frame"/>
</RelativeLayout>