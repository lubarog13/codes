<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:id="@+id/week_day"
        android:text="06.10  Среда"
        android:visibility="gone"
        android:fontFamily="@font/roboto_mono_medium"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/workout_week_type"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/workout_week_name"
        android:text="Волейбол"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="-5"
        android:textColor="@color/colorRed"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/workout_week_not_on_train"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="5"
        android:id="@+id/workout_week_dont_know"
        android:textColor="@color/colorGrey"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="+5"
        android:textColor="@color/colorGreen"
        android:id="@+id/workout_week_on_train"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="18:00"
        android:id="@+id/train_time"
        android:textColor="@color/colorSecondary"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24sp"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:rowCount="1"
        android:visibility="visible"
        android:id="@+id/go_buttons"
        android:columnCount="3">
        <Button
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_height="match_parent"
            android:background="@color/colorGreen"
            android:id="@+id/i_am_go"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Я иду"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_openmoji_person_raising_hand_light_skin_tone"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/i_am_not"
            android:layout_height="match_parent"
            android:background="@color/colorRed"
            android:text="Я не иду"
            android:paddingRight="-10dp"
            android:layout_row="0"
            android:layout_column="1"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_openmoji_person_gesturing_no_light_skin_tone"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_height="match_parent"
            android:id="@+id/who_go"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="Кто \nидет?"
            android:layout_row="0"
            android:layout_column="2"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_group_16"
            />
</GridLayout>
</LinearLayout>