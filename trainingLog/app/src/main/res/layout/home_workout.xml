<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:gravity="center_vertical"
        android:paddingLeft="5dp"
        android:id="@+id/week_day"
        android:text="06.10  Среда"
        android:visibility="gone"
        android:fontFamily="@font/roboto_mono_medium"
        android:textSize="20sp"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecondary"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">
    <TextView
        android:layout_width="5dp"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/workout_week_type"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:gravity="center"
        android:id="@+id/workout_week_name"
        android:text="Волейбол"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:text="-5"
        android:textColor="@color/colorRed"
        android:fontFamily="@font/roboto_bold"
        android:id="@+id/workout_week_not_on_train"
        android:textSize="18sp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="5"
        android:id="@+id/workout_week_dont_know"
        android:textColor="@color/colorGrey"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:paddingLeft="15dp"
        android:text="+5"
        android:textColor="@color/colorGreen"
        android:id="@+id/workout_week_on_train"
        android:fontFamily="@font/roboto_bold"
        android:textSize="18sp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:paddingLeft="30dp"
        android:text="18:00"
        android:id="@+id/train_time"
        android:textColor="@color/colorSecondary"
        android:fontFamily="@font/roboto_bold"
        android:textSize="24sp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorSecondary"/>
    <GridLayout
        android:layout_width="match_parent"
        android:paddingTop="20dp"
        android:layout_height="wrap_content"
        android:rowCount="4"
        android:visibility="gone"
        android:id="@+id/workout_info"
        android:columnCount="3">
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Группа"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:id="@+id/group_name"
            android:layout_column="2"
            android:layout_row="0"
            android:text="дети 2005-2008 г.р."
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@color/colorSecondary"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Тренер"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_column="2"
            android:layout_row="1"
            android:id="@+id/coach_name"
            android:text="Иванов И.И."
            android:paddingTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@color/colorSecondary"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            />

        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Зал"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_column="2"
            android:id="@+id/hall_name"
            android:layout_row="2"
            android:text="@string/hall_name"
            android:paddingTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@color/colorPrimary"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Вид"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:paddingStart="20dp"
            />
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="200dp"
            android:layout_column="2"
            android:layout_row="3"
            android:text="На технику"
            android:paddingTop="15dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:id="@+id/type_name"
            android:textColor="@color/colorSecondary"
            android:textAlignment="textEnd"
            android:paddingEnd="10dp"
            android:paddingBottom="20dp"
            />
    </GridLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:rowCount="1"
        android:visibility="gone"
        android:id="@+id/go_buttons"
        android:columnCount="3">
        <Button
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:layout_height="match_parent"
            android:background="@color/colorGreen"
            android:id="@+id/i_am_go"
            android:layout_row="0"
            android:layout_column="0"
            android:text="Я иду"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_openmoji_person_raising_hand_light_skin_tone"
        />
        <Button
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_gravity="fill"
            android:id="@+id/i_am_not"
            android:layout_height="match_parent"
            android:background="@color/colorRed"
            android:text="Я не иду"
            android:layout_row="0"
            android:layout_column="1"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:drawableStart="@drawable/ic_openmoji_person_gesturing_no_light_skin_tone"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_columnWeight="1"
            android:layout_height="match_parent"
            android:id="@+id/who_go"
            android:background="@color/colorPrimary"
            android:paddingLeft="10dp"
            android:text="Кто \nидет?"
            android:layout_row="0"
            android:layout_column="2"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_group_16"
            />
</GridLayout>
    <include
        layout="@layout/is_attend_layout"
        android:visibility="gone"
        android:id="@+id/is_attend_ok"/>
    <include
        layout="@layout/is_not_attend_layout"
        android:visibility="gone"
        android:id="@+id/is_attend_not"/>

</LinearLayout>