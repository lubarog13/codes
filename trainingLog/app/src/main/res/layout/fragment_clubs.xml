<?xml version="1.0" encoding="utf-8"?>
    <androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:layout_height="wrap_content">
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/colorPrimaryDark"/>
    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text= "Секции"
        android:fontFamily="@font/stalinist_one"
        android:textSize="24sp"
        android:gravity="center"
        android:textColor="@color/colorPrimaryDark"
        />
       <GridLayout
           android:layout_width="match_parent"
           android:columnCount="2"
           android:rowCount="1"
           android:background="@color/colorDivider"
           android:layout_height="41dp">
    <Button
        android:layout_width="wrap_content"
        android:layout_columnWeight="1"
        android:id="@+id/my"
        android:layout_gravity="center_vertical"
        android:text="Мои секции"
        android:textAllCaps="false"
        android:background="@color/colorDivider"
        android:textSize="18sp"
        android:paddingStart="10dp"
        android:drawablePadding="-30dp"
        android:drawableStart="@drawable/ic_icon_park_done_all"
        android:layout_height="39dp"/>
           <Button
               android:layout_width="wrap_content"
               android:paddingStart="10dp"
               android:layout_gravity="center_vertical"
               android:layout_columnWeight="1"
               android:background="@android:color/white"
               android:id="@+id/all"
               android:drawableStart="@drawable/ic_mdi_expand_all"
               android:layout_height="39dp"
               android:textSize="18sp"
               android:drawablePadding="-30dp"
               android:textAllCaps="false"
               android:text="Все секции"
               />
       </GridLayout>
    <include
        layout="@layout/error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:id="@+id/add_layout"
        android:orientation="horizontal">
        <TextView
            android:layout_width="110dp"
            android:layout_height="match_parent"
            android:text="Добавить"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:paddingStart="20dp"
            android:fontFamily="@font/roboto_bold"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="  Введите идентификатор секции"
            android:fontFamily="@font/roboto_bold"
            android:textSize="14sp"
            android:inputType="text"
            android:imeOptions="actionSend"
            android:id="@+id/identifier"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:paddingBottom="90dp"
        android:id="@+id/signups_recycler"
        android:layout_height="wrap_content" />
</LinearLayout>
    </androidx.core.widget.NestedScrollView>