<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <Button
        android:layout_width="317dp"
        android:id="@+id/group_button"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"
        android:background="@drawable/iten_button_background_blue"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        android:text="Анализ для групп"
        />
    <Button
        android:layout_width="317dp"
        android:id="@+id/users_button"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="10dp"
        android:background="@drawable/iten_button_background_blue"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        android:text="Анализ для занимающихся"
        />

    <Button
        android:layout_width="317dp"
        android:id="@+id/training_button"
        android:layout_height="36dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginVertical="20dp"
        android:background="@drawable/iten_button_background_blue"
        android:textAllCaps="false"
        android:textColor="@color/colorPrimaryDark"
        android:fontFamily="@font/roboto_bold"
        android:textSize="16sp"
        android:text="Анализ для тренировок"
        />

</LinearLayout>