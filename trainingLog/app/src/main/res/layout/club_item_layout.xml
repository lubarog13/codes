<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
    android:background="@drawable/profile_alpha_rect">
        <TextView
            android:layout_width="220dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="Волейбол"
            android:paddingRight="30dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:id="@+id/club_name"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="группа:"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@android:color/black"
            android:textSize="14sp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Девочки ст."
            android:gravity="center"
            android:fontFamily="@font/roboto_bold"
            android:textSize="14sp"
            android:textColor="@color/colorSecondary"
            android:id="@+id/club_group"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:rowCount="5"
        android:columnCount="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Тренер:"
            android:paddingTop="15dp"
            android:paddingStart="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:paddingEnd="20dp"
            android:layout_row="0"
            android:textAlignment="textEnd"
            android:id="@+id/club_coach_name"
            android:text="Самсонова Н.В."
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Здание:"
            android:paddingTop="15dp"
            android:paddingStart="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:id="@+id/club_building_address"
            android:paddingEnd="20dp"
            android:layout_row="1"
            android:textAlignment="textEnd"
            android:text="ул. Тверская, 25"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="30dp"
            android:layout_columnWeight="1"
            android:layout_column="0"
            android:layout_row="2"
            android:text="Окончание записи:"
            android:paddingTop="15dp"
            android:paddingStart="20dp"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_columnWeight="1"
            android:layout_column="1"
            android:paddingEnd="20dp"
            android:layout_row="2"
            android:textAlignment="textEnd"
            android:id="@+id/signup_end"
            android:text="31.05.22"
            android:fontFamily="@font/roboto_bold"
            android:textSize="16sp"
            />
    </GridLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <Button
            android:layout_width="198dp"
            android:layout_height="31dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/blue_button_2"
            android:text="Посмотреть занимающихся"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:id="@+id/signups"/>
        <Button
            android:layout_width="121dp"
            android:layout_height="31dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/button_red"
            android:text="Удалить запись"
            android:textAllCaps="false"
            android:fontFamily="@font/roboto_bold"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            android:id="@+id/delete_sinup"/>
    </LinearLayout>
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/names_in_club"
        android:visibility="gone"
        android:rowCount="1"
        android:columnCount="2">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_columnWeight="1"
        android:layout_column="0"
        android:id="@+id/usernames_1"
        android:fontFamily="@font/roboto_bold"
        android:textColor="#3F51B5"
        android:textAlignment="center"
        android:textSize="16sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:id="@+id/usernames_2"
            android:layout_column="1"
            android:fontFamily="@font/roboto_bold"
            android:textColor="#3F51B5"
            android:textAlignment="center"
            android:textSize="16sp"/>
    </GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#7BB0FF"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
</LinearLayout>