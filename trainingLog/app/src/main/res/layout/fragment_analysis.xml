<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:paddingBottom="90dp"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="244dp">

        <ImageView
            android:id="@+id/analysis_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />
    </RelativeLayout>
    <include
        layout="@layout/dont_show_layout"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:visibility="gone"/>
    <include
        layout="@layout/error_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="-200dp"
        android:visibility="gone"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/analysis_content"
        android:background="@drawable/rect_lay"
        android:layout_marginTop="-30dp"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Мои тренировки"
            android:gravity="center"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:id="@+id/analysis_title"
            />
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@color/colorDivider"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <GridLayout
            android:layout_width="150dp"
            android:layout_height="match_parent"
            android:rowCount="5"
            android:padding="20dp"
            android:layout_marginStart="30dp"
            android:columnCount="2"
            android:orientation="vertical">
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorRed"
                android:layout_row="0"
                android:layout_column="0"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_row="0"
                android:text="общая"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:textSize="10dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorOrange"
                android:layout_row="1"
                android:layout_column="0"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_row="1"
                android:text="кардио"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:textSize="10dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorYellow"
                android:layout_row="2"
                android:layout_column="0"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_row="2"
                android:text="другое"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:textSize="10dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorGreen"
                android:layout_row="3"
                android:layout_column="0"/>
            <TextView
                android:layout_width="50dp"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_row="3"
                android:text="силовая"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:textSize="10dp"/>
            <View
                android:layout_width="10dp"
                android:layout_height="10dp"
                android:background="@color/colorPrimaryDark"
                android:layout_row="4"
                android:layout_column="0"/>
            <TextView
                android:layout_width="65dp"
                android:layout_height="20dp"
                android:layout_column="1"
                android:layout_row="4"
                android:text="на технику"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_bold"
                android:gravity="end"
                android:textSize="10dp"/>

        </GridLayout>
    <org.eazegraph.lib.charts.PieChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/piechart"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        app:egValueTextColor="@android:color/black"
        app:egLegendColor="@android:color/black"
        app:egLegendTextSize="12sp"
        app:egUsePieRotation="true"
        app:egValueTextSize="12sp"
        android:padding="6dp"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="Посещения за год:"
        android:paddingStart="20dp"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@android:color/black"
        android:textSize="16sp"/>
    <org.eazegraph.lib.charts.ValueLineChart
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cubiclinechart"
        android:layout_width="match_parent"
        app:egCurveSmoothness="0.4"
        android:layout_height="200dp"
        app:egUseOverlapFill="true"
        android:layout_margin="20dp"
        app:egIndicatorLineColor="@color/colorRed"
        app:egLegendHeight="40dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal">
        <androidx.cardview.widget.CardView
            android:layout_width="150dp"
            android:layout_height="match_parent"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fontFamily="@font/roboto_bold"
                android:gravity="center"
                android:text="Всего:"
                android:id="@+id/typeText"
                android:textColor="@android:color/black"
                android:textSize="16sp" />
        </androidx.cardview.widget.CardView>
        <LinearLayout
            android:layout_width="130dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="84"
            android:textSize="60sp"
            android:gravity="center_horizontal"
            android:id="@+id/total_count"
            android:fontFamily="@font/roboto_bold"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="тренировки"
                android:id="@+id/trainings"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:layout_marginTop="-20dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:background="@drawable/button_blue"
                android:text="Все тренировки"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@android:color/white"
                android:textSize="11sp"
                android:id="@+id/all_train_button"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="25 общих"
                android:gravity="center"
                android:textColor="@color/colorRed"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:id="@+id/all_workout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="8 кардио"
                android:gravity="center"
                android:textColor="@color/colorOrange"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:id="@+id/cardio_workout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="8 других"
                android:gravity="center"
                android:textColor="@color/colorYellow"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:id="@+id/other_workout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:text="9 силовых"
                android:gravity="center"
                android:textColor="@color/colorGreen"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:id="@+id/strong_workout"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="34 на технику"
                android:gravity="center"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/roboto_bold"
                android:textSize="14sp"
                android:id="@+id/technic_workout"/>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>


</LinearLayout>
</androidx.core.widget.NestedScrollView>